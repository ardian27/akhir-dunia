<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.suska.uin.tif.zorokunti.dificam">

    <!-- To access Google+ APIs: -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/fp"
        android:label="@string/app_name"
        android:roundIcon="@drawable/fp"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PenggunaActivity"
            android:label="@string/title_activity_pengguna"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PelatihanActivity"
            android:label="@string/title_activity_pelatihan"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PengujianActivity"
            android:label="@string/title_activity_pengujian"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LbpActivity"
            android:label="@string/title_activity_lbp"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".BpnnActivity"
            android:label="@string/title_activity_bpnn"
            android:theme="@style/AppTheme.NoActionBar" />
        <!-- This meta-data tag is required to use Google Play Services. -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".AboutActivity"
            android:label="@string/title_activity_about" /> <!-- Include the AdActivity configChanges and theme. -->
        <activity
            android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:theme="@android:style/Theme.Translucent" />
        <activity android:name=".AddPengguna" />
        <activity android:name=".DetailPengguna" />
        <activity android:name=".GetPictActivity" />
        <activity android:name=".SimpleGetPictActivity" />
        <activity android:name=".ConvertPictureActivity" />
        <activity android:name=".SimpleConvertPictureActivity" />
        <activity android:name=".DaftarPengguna" />
        <activity android:name=".SimpanLBPActivity" />
        <activity android:name=".UpdateDataServer"></activity>
        <activity android:name=".Register"></activity>
        <activity android:name=".ma"></activity>
    </application>

</manifest>