<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.suska.uin.tif.zorokunti.dificam.PelatihanActivityFragment"
    tools:showIn="@layout/activity_pelatihan">


    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="439dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        android:weightSum="1">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="?android:attr/fingerprintAuthDrawable"
            android:layout_weight="0.67" />

        <TextView
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_gravity="center"
            android:ems="10"
            android:gravity="center"
            android:text="Selamat datang di laman pelatihan, mohon pastikan data pengguna objek pelatihan telah terdaftar di data pengguna"
            android:typeface="normal" />

        <Button
            android:id="@+id/btn_basicTraining"
            android:layout_width="400px"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="?attr/colorAccent"
            android:text="Basic Training"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <Space
            android:layout_width="20px"
            android:layout_height="20px" />

        <Button
            android:id="@+id/btn_simpleTraining"
            android:layout_width="400px"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="?attr/actionModeSplitBackground"
            android:text="Simple Training"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <ListView
            android:id="@+id/lv"
            android:layout_height="wrap_content"
            android:layout_above="@+id/button2"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_width="wrap_content">

        </ListView>


    </LinearLayout>
</android.support.constraint.ConstraintLayout>
