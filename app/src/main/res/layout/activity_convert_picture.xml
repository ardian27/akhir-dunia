<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ProgressBar
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:id="@+id/pb"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/canvas_kosong"
        android:layout_width="300dp"
        android:layout_height="211dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher" />



    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center">


        <TableRow
            android:gravity="center">

            <Button
                android:id="@+id/btn_resize"
                android:width="150dp"
                android:text="Resize" />
            <Button
                android:text="Grayscale"
                android:id="@+id/btn_grayscale"
                android:width="150dp"/>

        </TableRow>

        <TableRow
            android:gravity="center">
            <Button
                android:text="LBP"
                android:id="@+id/btn_lbp"
                android:width="150dp"/>
            <Button
                android:text="Histogram"
                android:id="@+id/btn_histogram"
                android:width="150dp"/>


        </TableRow>

          <TableRow
              android:gravity="center">
              <Button
                  android:text="BPNN"
                  android:id="@+id/btn_bpnn"
                  android:width="150dp"/>

              <Button
                  android:text="Pilih Pengguna"
                  android:id="@+id/btn_pengguna"
                  android:width="150dp"/>

          </TableRow>

        <TableRow
            android:gravity="center">

            <TextView
                android:id="@+id/tv_jmean"
                android:text="Nilai Mean "/>
            <TextView
                android:id="@+id/tv_mean"
                android:text=" : 0"/>

        </TableRow>
        <TableRow
            android:gravity="center">

            <TextView
                android:id="@+id/tv_jVariance"
                android:text="Nilai Variance "/>
            <TextView
                android:id="@+id/tv_variance"
                android:text=" : 0"/>

        </TableRow>

        <TableRow
            android:gravity="center">

            <TextView
                android:id="@+id/tv_jSkewness"
                android:text="Nilai Skewness "/>
            <TextView
                android:id="@+id/tv_skewness"
                android:text=" : 0"/>

        </TableRow>

        <TableRow
            android:gravity="center">

            <TextView
                android:id="@+id/tv_jKurtosis"
                android:text="Nilai Kurtosis "/>
            <TextView
                android:id="@+id/tv_kurtosis"
                android:text=" : 0"/>

        </TableRow>
        <TableRow
            android:gravity="center">

            <TextView
                android:id="@+id/tv_jEntrophy"
                android:text="Nilai Entrophy "/>
            <TextView
                android:id="@+id/tv_entrophy"
                android:text=" : 0"/>

        </TableRow>

    </TableLayout>


</LinearLayout>
